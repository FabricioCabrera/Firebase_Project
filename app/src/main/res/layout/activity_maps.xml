<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:layout_gravity="center"
        tools:context=".Mapa.MapsActivity">


        <Button
            android:id="@+id/btnUb1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_baseline_person_pin_circle_24"
            android:gravity="center" />

    </fragment>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/fav"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_buton_login"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/mi_favorito"
            android:textColor="#fff" />

        <Button
            android:id="@+id/limp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_buton_login"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/limpiar_marcas"
            android:textColor="#fff" />

    </LinearLayout>
</RelativeLayout>