<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--FOTO DE FONDO-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="center"
            android:src="@drawable/fondo_azul" />


        <!--DATOS RECUPERADOS-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:padding="10dp">


            <!--FOTO DE PERFIL-->
            <ImageView
                android:id="@+id/idFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:background="#0B4c5F"
                android:padding="3dp"
                android:scaleType="center" />
            !--FOTO DE PERFIL-->


            <!--MÁS DATOS-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <!--ID-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                </LinearLayout>
                <!--NOMBRE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre:"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/textuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="--"
                        android:textColor="#000" />


                </LinearLayout>

                <!--CORREO-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Correo:"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/textCorreo"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="--"
                        android:textColor="#000" />


                </LinearLayout>




            </LinearLayout>
            <!--MÁS DATOS-->



            <!--MENÚ DE OPCIONES-->
            <!--OPCIONES 1 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2">

                <!--MIS DATOS-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/datos"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnMisDatos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MIS DATOS"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"/>

                </LinearLayout>

                <!--CREAR-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">


                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/crear"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnCrear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CREAR"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"/>

                </LinearLayout>

            </LinearLayout>
            <!--OPCIONES 3 4  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2">


                <!--PUBLICACIONES-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/publicaciones"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnPublicaciones"
                        android:text="PUBLICACIONES"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!--USUARIOS-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/usuarios"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnUsuarios"
                        android:text="USUARIOS"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <!--OPCIONES 5 6  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:weightSum="2">


                <!--CHATS-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/chats"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnChats"
                        android:text="CHATS"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <!--SALIR-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:src="@drawable/salir_app"
                        android:layout_gravity="center"/>

                    <Button
                        android:id="@+id/btnSalir"
                        android:text="CERRAR SESIÓN"
                        android:textColor="#fff"
                        android:background="@drawable/border_buton_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>
            <!--MENÚ DE OPCIONES-->

        </LinearLayout>

    </RelativeLayout>


</ScrollView>